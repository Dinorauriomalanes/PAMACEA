<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoPamacea</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/chat-widget.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoPamacea.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="main-header">
        <a asp-controller="Home" asp-action="Index" class="logo-container">
            <img src="~/images/BotonIA.png" alt="Logo" class="site-logo">
        </a>
        <nav class="main-nav">
            <table>
                <tr >
                    <th><a class="enlace-animado" asp-controller="Home" asp-action="Enfermedades">ENFERMEDADES DE TEMPORADA</a></th>
                    <th><a class="enlace-animado" asp-controller="Home" asp-action="Anatomia">ANATOMIA HUMANA</a></th>
                    <th><a class="enlace-animado" asp-controller="Home" asp-action="SaludMental">SALUD MENTAL</a></th>
                    <th><a class="enlace-animado" asp-controller="Home" asp-action="Ayuda">¿NECESITAS AYUDA?</a></th>
                    <th><a class="enlace-animado" asp-controller="Home" asp-action="AcercaDe">ACERCA DE NOSOTROS</a></th>
                </tr>
            </table>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ProyectoPamacea - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Chat Widget -->
    <div id="chat-widget-container" class="chat-widget-container">
        <div class="chat-header-widget">
            <span>Asistente IA</span>
            <button id="close-chat-btn" class="close-btn">&times;</button>
        </div>
        <div id="widget-chat-history" class="chat-history-widget">
            <div class="message ai-message">
                <div class="message-content">
                    ¡Hola! ¿Puedo ayudarte en algo?
                </div>
            </div>
        </div>
        <div class="chat-input-area-widget">
            <input type="text" id="widget-user-input" placeholder="Escribe aquí..." />
            <button id="widget-send-btn">➤</button>
        </div>
    </div>

    <button id="chat-toggle-btn" class="chat-toggle-btn">
        <img src="~/images/BotonIA.png" alt="Chat IA" />
    </button>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
