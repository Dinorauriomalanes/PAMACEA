@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const dropdownBtn = document.getElementById('dropdown-btn');
            const dropdownMenu = document.getElementById('dropdown-menu');
            const selectedEstado = document.getElementById('selected-estado');
            const dropdownItems = document.querySelectorAll('.dropdown-item');
            const estadoContents = document.querySelectorAll('.estado-content');

            // Toggle dropdown
            dropdownBtn.addEventListener('click', function() {
                dropdownMenu.classList.toggle('show');
            });

            // Close dropdown when clicking outside
            document.addEventListener('click', function(event) {
                if (!event.target.closest('.custom-dropdown')) {
                    dropdownMenu.classList.remove('show');
                }
            });

            // Handle item selection
            dropdownItems.forEach(item => {
                item.addEventListener('click', function() {
                    const estado = this.getAttribute('data-estado');
                    const estadoText = this.textContent;

                    // Update selected text
                    selectedEstado.textContent = estadoText;

                    // Hide all content sections
                    estadoContents.forEach(content => {
                        content.classList.remove('active');
                    });

                    // Show selected content
                    const selectedContent = document.getElementById('content-' + estado);
                    if (selectedContent) {
                        selectedContent.classList.add('active');
                    }

                    // Close dropdown
                    dropdownMenu.classList.remove('show');
                });
            });
        });
    </script>
}
